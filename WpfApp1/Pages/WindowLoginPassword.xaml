<Window x:Class="WpfApp1.WindowLoginPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="WindowLoginPassword" Height="220" Width="300" Background="Pink">
    <Grid>
        <StackPanel>
            <GroupBox Margin="5" Header="Введите новый логин">
                <TextBox Name="tbLogin"></TextBox>
            </GroupBox>
            <GroupBox Margin="5" Header="Введите новый пароль">
                <PasswordBox Name="tbPassword" Height="26"></PasswordBox>
            </GroupBox>
            <Button Click="Button_Click">Изменить данные</Button>
        </StackPanel>
    </Grid>
</Window>
